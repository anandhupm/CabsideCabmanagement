@model BookingViewModel


@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Search</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Search">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <label asp-for="Pickup"></label>
                <select asp-for="PickupLabel" asp-items="@(new SelectList(Model.Pickup, "Id","Name"))" class="form-control">
                </select>
                <span asp-validation-for="Pickup" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Destination"></label>
                <select asp-for="DestinationLabel" asp-items="@(new SelectList(Model.Destination, "Id","Name"))" class="form-control">
                </select>
                <span asp-validation-for="Destination" class="text-danger"></span>
            </div>




            <div class="form-group">
                <input type="submit" value="Search Cab" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>



